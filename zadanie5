#include <iostream>
#include <stdlib.h>
#define N 100

using namespace std;


namespace kartoteka
{
class Osoba
{
public:
    string imie,nazwisko;
    /*Osoba()
    {
        a="Gall";
        b="Anonim";
    }*/
    Osoba(string imie,string nazwisko)
    {
        imie="Gall";
        nazwisko="Anonim";
    }
    string getimie()
    {
        return imie;
    };
    string getnazwisko()
    {
        return nazwisko;
    };
};


namespace mockup
{
class Kartoteka
{
public:
    void dodaj(Osoba o) {}
    void usun(Osoba o) {}
    int rozmiar()
    {
        return 1;
    }
    bool czyZawiera(Osoba o)
    {
        return true;
    }
    Osoba pobierz(int index)
    {
        return Osoba("Gall","Anonim");
    };
};
};


namespace imp
{
class Kartoteka
{
        public:
        int ind;
        Osoba *tab;
        Kartoteka(){
            ind=-1;
            tab=new Osoba[N];
        }
        ~Kartoteka(){
            delete[]tab;
            ind=-1;
        }








};
};
};

using namespace kartoteka;
using namespace kartoteka::mockup;
//using namespace kartoteka::imp;

int main()
{
    int wybor,temp,wybor2=0;
    Kartoteka lista;
    string imie,nazwisko;
    do
    {
    cout<<"MENU"<<endl;
    cout<<"1.Dodaj"<<endl<<"2.Usun"<<endl<<"3.Rozmiar"<<endl<<"4.Czy dana osoba nalezy do listy?"<<endl<<"5.Wyswietl osobe z numeru indeksu"<<endl<<"6.Wyjdz"<<endl;
    cout<<"Wybor:";
    cin>>wybor;

        switch (wybor)
        {
        case 1:
        {
            cout<<"Podaj imie"<<endl;
            cin>>imie;
            cout<<"Podaj nazwisko"<<endl;
            cin>>nazwisko;
            Osoba o(imie,nazwisko);
            lista.dodaj(o);
            break;
        }

        case 2:
        {
            cout<<"Podaj imie"<<endl;
            cin>>imie;
            cout<<"Podaj nazwisko"<<endl;
            cin>>nazwisko;
            Osoba o(imie,nazwisko);
            lista.usun(o);
            break;
        }

        case 3:
        {
            cout<<lista.rozmiar()<<endl;
            break;
        }

        case 4:
        {
            cout<<"Podaj imie"<<endl;
            cin>>imie;
            cout<<"Podaj nazwisko"<<endl;
            cin>>nazwisko;
            Osoba o(imie,nazwisko);
            if (lista.czyZawiera(o)==true)
            {
                cout<<"Tak"<<endl;
            }
            else
            {
                cout<<"Nie"<<endl;
            }
            break;
        }

        case 5:
        {
            cout<<"Podaj numer indeksu osoby"<<endl;
            cin>>temp;
            lista.pobierz(temp);
            break;
        }

        case 6:
        {
            exit(0);
        }
        default:
        {
            cout<<"Nieprawidlowy wybor,nacisnij dowolny przycisk aby wyjsc"<<endl;
            exit(-1);
        }
        }
        cout<<endl<<"Chcesz zrobic cos jeszcze?Tak-1/Nie-0"<<endl;
        cout<<"Wybor:";
        cin>>wybor2;
    }
    while (wybor2!=0);
    return 0;
}
